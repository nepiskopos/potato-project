{
    "Serilog": {
        "Using": [ "Serilog.Sinks.MySQL" ],
        "WriteTo": [
            {
                "Name": "MySQL",
                "Args": {
                    "tableName": "Logs",
                    "autoCreateSqlTable": true,
                    "storeTimestampInUtc": "false"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName" ],
        "Properties": {
            "ApplicationName": "Potato Project"
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        //"ApplicationDatabase": "server=localhost;port=3306;database=db;uid=user;pwd=password;",
        //"SerilogDatabase": "server=localhost;port=3307;database=db;uid=user;pwd=password;"
        "ApplicationDatabase": "server=app_db;port=3306;database=db;uid=user;pwd=password;",
        "SerilogDatabase": "server=log_db;port=3307;database=db;uid=user;pwd=password;"
    },
    "Kestrel": {
        "Endpoints": {
            "HttpEndpoint1": {
                "Url": "http://+:8080"
            },
            "HttpEndpoint2": {
                "Url": "http://+:8081"
            }
        }
    },
    "AllowedHosts": "*"
}